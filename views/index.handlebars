
<div class="container">

    <div class="jumbotron">
        <h1>Eat-Da-Burger</h1>
        <p>list the burgers you want to eat, then devour um!</p>
        <br>
        <h2>Make a  new Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    
                    <button type="submit" class="btn btn-success" id="addburger">ADD IT</button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-primary" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour ME!</button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="deleteburger btn btn-danger" data-id="{{this.id}}" data-newDevoured="{{devour}}">That was YUMMY!</button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>